<h1>Add a New Review</h1>

<%= render partial: 'layouts/errors', locals: {object: @review} %>

<h3>Tell Us About the Donut You Had!</h3>

<%= form_with model: @donut, local: true do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <br>
 
  <%= f.label :color %><br>
  <%= f.text_area :color %><br>
  <br>

  <%= f.label :location %><br>
  <%= f.text_area :location %><br>
  <br>

  <h3>Now Tell Us What You Loved About It!</h3>
   
  <%= form_with model: @review, local: true do |r| %>
  <br>

  <%= r.label :description %>
  <%= r.text_field :description %><br>
  
<% end %>

  <%= f.submit %>

  <% end %>

