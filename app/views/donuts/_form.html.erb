<%= render partial: 'layouts/errors', locals: {object: @donut } %>

<%= form_for @donut do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <br>
 
  <%= f.label :color %><br>
  <%= f.text_area :color %><br>
  <br>

  <%= f.label :location %><br>
  <%= f.text_area :location %><br>
  <br>
 
  <%= f.submit %>
  
<% end %>